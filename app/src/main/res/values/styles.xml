<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppToolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">#FFF</item>
        <item name="subtitleTextColor">#EEE</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title.Genre" parent="Title">
        <item name="android:background">#BADAFF</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EventListView">
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
