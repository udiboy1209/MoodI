<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context="org.iitb.moodi.ui.activity.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/system_bar_bg"/>
        <android.support.v7.widget.Toolbar
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            style="@style/AppToolbar"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/map_ff_search_container"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:visibility="gone">
            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:materialIcon="account_search"
                fab:materialIconColor="#fff"
                fab:materialIconSize="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"/>
            <org.iitb.moodi.ui.widget.InstantAutoComplete
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/map_ff_search_bar"
                android:layout_marginBottom="3dp"
                android:background="@color/colorPrimary"
                android:hint="Search Friends"
                android:textColorHint="#BBB"
                android:textColor="#FFF"
                android:textCursorDrawable="@drawable/cursor"/>
        </LinearLayout>
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_filter_menu"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|end"
        fab:menu_icon="@drawable/ic_filter"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorSecondary">
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_filter_acco"
            android:src="@drawable/ic_hotel"
            android:padding="10dp"
            android:onClick="filterMap"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorSecondary"
            fab:fab_label="Accomodation"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_filter_food"
            android:src="@drawable/ic_food"
            android:padding="10dp"
            android:onClick="filterMap"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorSecondary"
            fab:fab_label="Food and Beverages"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_filter_aid"
            android:src="@drawable/ic_hospital"
            android:padding="10dp"
            android:onClick="filterMap"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorSecondary"
            fab:fab_label="First Aid"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_filter_events"
            android:src="@drawable/ic_ticket"
            android:padding="10dp"
            android:onClick="filterMap"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorSecondary"
            fab:fab_label="Events"/>
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_filter_clear"
            android:padding="10dp"
            android:src="@drawable/ic_clear"
            android:onClick="filterMap"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorSecondary"
            fab:fab_label="Clear Filter"/>
    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorSecondary"
        android:src="@drawable/ic_friend_finder"
        android:id="@+id/map_ff_control"
        android:onClick="ffControl"/>

</android.support.design.widget.CoordinatorLayout>
