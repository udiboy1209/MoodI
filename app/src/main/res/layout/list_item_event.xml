<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:background="@drawable/list_item_event_bg">
        <in.workarounds.typography.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_list_item_name"
            android:textColor="#000"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="0dp"
            android:layout_toLeftOf="@+id/event_list_item_favourite"
            android:focusable="false"
            android:clickable="false"/>
        <in.workarounds.typography.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_list_item_description"
            android:layout_toLeftOf="@+id/event_list_item_favourite"
            android:layout_below="@+id/event_list_item_name"
            android:textColor="#8c8c8c"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:layout_marginLeft="15dp"
            android:paddingTop="0dp"
            android:textSize="12sp"
            android:focusable="false"
            android:clickable="false"/>
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:materialIcon="star_outline"
            app:materialIconColor="#AAA"
            app:materialIconSize="27dp"
            android:layout_margin="10dp"
            android:id="@+id/event_list_item_favourite"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:focusable="false"
            android:clickable="false"/>
    </RelativeLayout>
</LinearLayout>