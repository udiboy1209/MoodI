<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.iitb.moodi.ui.activity.RegistrationActivity">
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/system_bar_bg"/>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        style="@style/AppToolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical" >
        <in.workarounds.typography.EditText
            android:id="@+id/reg_name"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textSize="18sp"/>

        <in.workarounds.typography.EditText
            android:id="@+id/reg_email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <in.workarounds.typography.EditText
                android:id="@+id/reg_phone"
                android:hint="Phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                app:font_name="Roboto"
                app:font_variant="Regular"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/reg_gender"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Spinner
            android:id="@+id/reg_city"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/reg_college"
            android:hint="College"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/reg_year"
            android:hint="Year of Study"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <in.workarounds.typography.EditText
            android:id="@+id/reg_dob"
            android:hint="Date of Birth (DD-MM-YYYY)"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:font_name="Roboto"
            app:font_variant="Regular"
            android:textSize="18sp"
            android:layout_weight="1" />
    </LinearLayout>

    <in.workarounds.typography.TextView
        android:background="@color/action_bar"
        style="?android:buttonBarButtonStyle"
        android:text="Register"
        android:onClick="saveData"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:font_name="Roboto"
        app:font_variant="Medium"
        android:textSize="18sp"/>
</LinearLayout>
